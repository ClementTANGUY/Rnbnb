<!DOCTYPE html>
<html>
  <head>
    <title>Rnbnb</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="<%= root_path %>">RNBNB</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
          <ul class="nav navbar-nav collapse navbar-collapse justify-content-right" id="navbar" >
            <li class="nav-item">
              <a href="#" class="nav-link navbar-text">Devenez hôte</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link navbar-text">Message</a>
            </li>
          </ul>
        <div class="nav navbar-expand container d-flex flex-row-reverse" id="navbar">
          <ul class="nav navbar-nav pr-5 mr-5 " id="navbar">

          <% if user_signed_in? %>
          <li class="nav-item dropdown dropdown-light" id="navbar">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <img src="<%= avatar_url(current_user) %>" class="rounded-circle avatar-small">  <%= current_user.fullname %>

                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu bg" role="menu" id="navbar">
                <li class="dropdown-item"><a href="<%= edit_user_registration_path %>" class="nav-link" >Mon compte</a></li>
                <li class="dropdown-item"><a href="<%= destroy_user_session_path %>" class="nav-link" data-method="delete">Se déconnecter</a></li>
              </ul>
          </li>

          <%else%>
            <li>
              <a href="<%= new_user_registration_path %>" class="nav-link">S'inscrire</a>
            </li>
            <li>
              <a href="<%= new_user_session_path %>" class="nav-link mr-5">Se connecter</a>
            </li>
          <%end%>
          </ul>
        </div>
    </nav>





    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
