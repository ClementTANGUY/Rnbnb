<div class="row d-flex justify-content-center">
    <div class="col-md-4 col-md-offset-4 text-center ">
      <br><br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Votre adresse e-mail" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"Votre mot de passe" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Se Connecter", class: "btn btn-primary" %>
      </div>
    <% end %>

    <br>
    <br>

    <a href="<%= new_user_password_path %>", class="btn btn-primary btn-sm">Mot de passe oubliÃ©</a>

  </div>
</div>
