<div class="row">
    <div class="col-md-3">
 
     <ul class="list-group-flush">
 
          <li class="list-group-item">
 
               <%= link_to 'Modifier mon profil', edit_user_registration_path, class: 'sidebar-link active' %>
 
          </li>
 
     </ul>
 
 <br>
 
 <%= link_to 'Voir mon profil', user_path(current_user.id), class: 'btn btn-light wide' %>
 
 </div>

    <div class="col-md-7 text-center">

   <div class="card">
     <div class="card-header">
       
        <h2>Modifier mon profil</h2>
     </div>
     <div class="card-body">
        <div class="text-center">
          <img src="<%= avatar_url(current_user) %>" class="avatar-small rounded mx-auto d-block" style="width: 150px ;">
        </div>
        <br>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder:"Nom complet (NOM + PrÃ©nom)" %>
          </div>
          <div class="custom-file">
            <label class="custom-file-label" for="validatedCustomFile">Choisir un fichier</label>
            <%= f.file_field :avatar, class: 'custom-file-input' %>
            <div class="invalid-feedback">Format invalide</div>
          </div>
          <br> <br>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Votre adresse e-mail" %>
          </div>

          <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe (si vous souhaitez changer de mot de passe)"  %>
          </div>

          <div class="form-group">
             <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du nouveau mot de passe" %>
          </div>

          <div class="form-group">
            <br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe actuel (pour confirmer tout changement)" %>
          </div>

          <div class="actions">
            <%= f.submit "Enregistrer mes modifications", class: "btn btn-primary"%>
          </div>
        <% end %>

      </div>
         </div>
   </div>
</div>
