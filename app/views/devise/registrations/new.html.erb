<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">

    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder:"Nom complet (NOM + Prénom)" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"Votre adresse e-mail" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"Créer votre mot de passe" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder:"Confirmer votre mot de passe" %>
      </div>

      <div class="actions">
        <%= f.submit "S'inscrire", class: "btn btn-success" %>
      </div>
    <% end %>

  </div>
</div>
