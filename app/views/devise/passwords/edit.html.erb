<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: 'Votre nouveau mot de passe' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirmez votre nouveau mot de passe' %>
  </div>

  <div class="form-group">
    <%= f.submit "Modifier mon mot de passe" %>
  </div>
<% end %>
