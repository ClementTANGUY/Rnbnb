<% @messages.each do |message| %>

      <div class="card">

           <div class="card-body">

               <%= image_tag avatar_url(message.user), class: "img-circle avatar-small" %>

               <strong><%= message.user.fullname %></strong>

               <span class="pull-right"><%= message.created_at %></span>

               <br>

               <div class="row-space-2">

                   <%= message.content %>

               </div>

           </div>

       </div>

 <% end %>
