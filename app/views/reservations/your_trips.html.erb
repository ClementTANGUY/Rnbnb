<div class="row">

      <div class="col-md-3">

            <ul class="sidebar-list">

                <li class="sidebar-item"><%= link_to "Mes annonces", rooms_path, class: "sidebar-link" %></li>
                <li class="sidebar-item"><%= link_to "Mes réservations", rooms_path, class:"sidebar-link" %></li>
                <li class="sidebar-item"><%= link_to "Mes voyages", your_trips_path, class:"sidebar-link active" %></li>

            </ul>

       </div>

       <div class="col-md-9">

            <div class="card card-default">

                 <div class="card-header">Mes voyages

                 </div>


                <div class="card-body">

                  <% @trips.order("id DESC").each do |trip| %>
                    <div class="row">
                      <div class="col-md-2">
                        Du <%= trip.start_date.strftime("%d.%m.%y") if trip.start_date %> au <%= trip.end_date.strftime("%d.%m.%y") if trip.end_date %>
                      </div>
                      <div class="col-md-6">
                        <%= link_to room_path(trip.room) do %>
                          <%= image_tag trip.room.photos[0].image.url(:thumb) if trip.room.photos.length > 0 %>
                        <% end %>
                      </div>
                      <div class="col-md-2">
                        <%= link_to user_path(trip.room.user) do %>
                          <%= image_tag avatar_url(trip.room.user), class:"rounded-circle avatar-medium" %>
                        <% end %>
                      </div>
                      <div class="col-md-2 right">
                        <h4><%= trip.total %> €</h4>
                      </div>
                    </div>
                    <hr>
                  <% end %>

               </div>

           </div>

     </div>

 </div>
