<div class="card card-body">

	<h3>Réserver maintenant</h3>
	<br>
	<div class="row">
        <div class="col-md-12 price_tag">
            <span>€ <%= @room.price %></span>
            <span class="pull-right">Par nuit</span>
        </div>
    </div>
    <br>
	<%= form_for([@room, @room.reservations.new]) do |f| %>

	     <div class="row">
	 
	         <div class="col-md-6">
	 
	         <label>Arrivée</label>
	 
	         <%= f.text_field :start_date, readonly: 'true', placeholder: 'jj/mm/aaaa', class: 'form-control form-datepicker' %>
	 
	         </div>
	 
	         <div class="col-md-6">
	 
	         <label>Départ</label>
	 
	         <%= f.text_field :end_date, readonly: 'true', placeholder: 'jj/mm/aaaa', class: 'form-control form-datepicker' %>
	 			
	 			<br>
	         
	         </div>


	     	<%= f.hidden_field :room_id, value: @room.id %>

	     	<%= f.hidden_field :price, value: @room.price %>

	     	<%= f.hidden_field :total, id: 'reservation_total' %>
			

			<div id="preview" style="display: none;">
		 
		       <table class="reservation-table" >
		 
		               <tbody>
		 
		                    <tr>
		 
		                        <td>Nuit(s)</td>
		 
		                        <td><span id="reservation_days"></span></td>
		 
		                    </tr>
		 
		                    <tr>
		 
		                         <td>Total</td>
		 
		                         <td><span id="reservation_sum"></span>€</td>
		 
		                   </tr>
		 
		               </tbody>
		 
		        </table>
		 
		 	</div>

			<div class="container-fluid">
	 			 <%= f.submit "Demande de réservation ", class: "btn btn-primary btn-block" %>
	 		</div>

	 	</div>

	<% end %>

</div>

 
